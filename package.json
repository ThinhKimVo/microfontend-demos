{
  "name": "@mfe/root",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n shell,react,vue,angular,hopefull-admin -c blue,green,yellow,magenta,cyan \"pnpm --filter @mfe/shell dev\" \"pnpm --filter @mfe/react-remote dev\" \"pnpm --filter @mfe/vue-remote dev\" \"pnpm --filter @mfe/angular-remote dev\" \"pnpm --filter @mfe/hopefull-admin dev\"",
    "dev:shell": "pnpm --filter @mfe/shell dev",
    "dev:react": "pnpm --filter @mfe/react-remote dev",
    "dev:vue": "pnpm --filter @mfe/vue-remote dev",
    "dev:angular": "pnpm --filter @mfe/angular-remote dev",
    "build": "pnpm -r build",
    "build:prod": "pnpm -r build:prod",
    "clean": "pnpm -r exec rm -rf dist node_modules && rm -rf node_modules",
    "dev:hopefull-admin": "pnpm --filter @mfe/hopefull-admin dev",
    "integrate": "node scripts/integrate-remote.js",
    "integrate:scan": "node scripts/integrate-remote.js --scan",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "deploy": "bash scripts/deploy.sh deploy",
    "deploy:status": "bash scripts/deploy.sh status",
    "deploy:stop": "bash scripts/deploy.sh stop",
    "deploy:logs": "bash scripts/deploy.sh logs",
    "deploy:pm2": "bash scripts/deploy-pm2.sh deploy",
    "deploy:pm2:status": "bash scripts/deploy-pm2.sh status",
    "deploy:pm2:stop": "bash scripts/deploy-pm2.sh stop",
    "deploy:pm2:logs": "bash scripts/deploy-pm2.sh logs"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
